<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_mascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/iv_photo_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/mucuchies" />


        <TextView
            android:id="@+id/tv_likes_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/iv_photo_cv"
            android:layout_alignRight="@+id/iv_photo_cv"
            android:layout_below="@+id/iv_photo_cv"
            android:text="5"
            android:textSize="@dimen/cardview_name_size" />

        <ImageButton
            android:id="@+id/iv_like_cv"
            android:layout_width="@dimen/icon_bone_size"
            android:layout_height="@dimen/icon_bone_size"
            android:layout_alignLeft="@+id/iv_photo_cv"
            android:layout_alignStart="@+id/iv_photo_cv"
            android:layout_alignTop="@+id/tv_likes_cv"
            android:background="@drawable/dog_bone_48" />

        <TextView
            android:id="@+id/tv_name_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_like_cv"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/iv_like_cv"
            android:layout_toRightOf="@+id/iv_like_cv"
            android:text="Ronnie"
            android:textSize="@dimen/cardview_name_size"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>